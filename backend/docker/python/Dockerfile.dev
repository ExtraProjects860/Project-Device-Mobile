FROM python:3.13-alpine

WORKDIR /app

COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

COPY microservices/pyproject.toml .
COPY microservices/uv.lock .

COPY microservices/ .

RUN uv sync --frozen --no-cache

CMD ["uv", "run", "uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8054", "--reload"]
